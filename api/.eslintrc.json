{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 160,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "eqeqeq": "error"
  }
}
